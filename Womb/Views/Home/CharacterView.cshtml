@model CharacterViewModel

@{
    ViewData["Title"] = "Character Creator";
}
<div class="container">
    <h1 class="display-4">@Model.Name</h1>
</div>

@if (String.IsNullOrWhiteSpace(Model.Subrace))
{
    <h3 class="text-primary mx-5">@Model.Race</h3>
}
else
{
    <h3 class="text-primary mx-5">@Model.Subrace @Model.Race</h3>
}

<h3 class="text-primary mx-5">@Model.Subclass @Model.Class</h3>

<hr />

<div class="container my-2">
    <div class="row">
        @foreach (var stat in Model.Stats)
        {
            <div class="col-md col-sm-auto">
                <p class="text-center">
                    @stat.Key
                    <br />
                    @stat.Value
                </p>
            </div>
            <hr class="invisible" />
        }
    </div>
</div>